<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_margin="6dp"
    app:cardCornerRadius="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="asgsagsag"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/product_types"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="sagggggggggggg"
            app:layout_constraintLeft_toLeftOf="@id/product_name"
            app:layout_constraintTop_toBottomOf="@id/product_name" />

        <ImageView
            android:id="@+id/address_img"
            android:layout_width="25dp"
            android:layout_height="25dp"

            android:src="@drawable/ic_baseline_location_on_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@id/product_types"
            app:layout_constraintTop_toBottomOf="@id/product_types" />

        <TextView
            android:id="@+id/product_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="Toshkent"
            android:textColor="#00ACC1"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/address_img"
            app:layout_constraintLeft_toRightOf="@id/address_img"
            app:layout_constraintTop_toTopOf="@id/address_img" />

        <ImageView
            android:id="@+id/date_img"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginStart="16dp"
            android:src="@drawable/ic_baseline_access_time_24"
            app:layout_constraintBottom_toBottomOf="@id/address_img"
            app:layout_constraintLeft_toRightOf="@id/product_address"
            app:layout_constraintTop_toTopOf="@id/address_img" />

        <ImageView
            android:id="@+id/menuBtn"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginEnd="16dp"
            android:padding="4dp"
            android:src="@drawable/menu"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias=".4" />


        <TextView
            android:id="@+id/created_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="sagsagasg"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/product_address"
            app:layout_constraintLeft_toRightOf="@id/date_img"
            app:layout_constraintTop_toTopOf="@id/product_address" />

        <ImageView
            android:id="@+id/money_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:src="@drawable/ic_baseline_attach_money_24"
            app:layout_constraintBottom_toBottomOf="@id/product_address"
            app:layout_constraintLeft_toRightOf="@id/created_date"
            app:layout_constraintTop_toTopOf="@id/product_address" />

        <TextView
            android:id="@+id/cost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="100.0"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@id/money_img"
            app:layout_constraintLeft_toRightOf="@id/money_img"
            app:layout_constraintTop_toTopOf="@id/money_img" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>